  </div>

  <style>
    .carousel {
      position: relative;
      width: 100%;
      height: 100%;
      overflow: hidden;
      display: none; /* Start med å skjule karusellen */
    }

    .carousel-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: opacity 0.5s ease;
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0; /* Start med usynlige bilder */
    }

    .carousel-image.visible {
      opacity: 1; /* Gjør bildet synlig */
    }

    .hidden {
      display: none; /* Skjuler bildene som ikke er synlige */
    }

    .carousel.visible {
      display: block; /* Vis karusellen når det er nødvendig */
    }
  </style>

  <script>
    const links = document.querySelectorAll(".project-link");
    const images = document.querySelectorAll(".carousel-image");
    const carouselContainer = document.querySelector(".carousel");

    links.forEach((link) => {
      link.addEventListener("mouseenter", function () {
        const targetProject = this.getAttribute("data-project");

        // Vis karusellen
        carouselContainer.classList.add("visible");

        // Skjul alle bilder
        images.forEach((image) => {
          image.classList.remove("visible");
          image.classList.add("hidden");
        });

        // Vis bildet for det valgte prosjektet
        const targetImage = document.querySelector(
          `.carousel-image[data-project="${targetProject}"]`
        );
        targetImage.classList.remove("hidden");
        targetImage.classList.add("visible");
      });

      link.addEventListener("mouseleave", function () {
        // Skjul bildet når musen forlater linken
        const targetProject = this.getAttribute("data-project");
        const targetImage = document.querySelector(
          `.carousel-image[data-project="${targetProject}"]`
        );
        targetImage.classList.remove("visible");
        targetImage.classList.add("hidden");

        // Skjul karusellen når ingen linker er hoveret
        carouselContainer.classList.remove("visible");
      });
    });
  </script>
</div>
