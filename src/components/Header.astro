<div>
  <nav id="desktopmenu" class="">
    <ul class="justify-end">
      <li class=""><a href="">Om kunstneren</a></li>
      <li class=""><a href="">Om værkerne</a></li>
      <li class=""><a href="">Anmeldelser</a></li>
      <li class="">(ENG / DK)</li>
      <li class="">
        <button id="playPauseButton">Music</button>

        <audio id="backgroundMusic" autoplay loop>
          <source src="sang.mp3" type="audio/mpeg" />
        </audio>
      </li>
    </ul>
  </nav>

  <script>
    // Henter lyd- og knappelementet
    const music = document.getElementById("backgroundMusic");
    const playPauseButton = document.getElementById("playPauseButton");

    // Setter knappens funksjonalitet
    playPauseButton.addEventListener("click", () => {
      if (music.paused) {
        music.play();
        playPauseButton.classList.remove("muted");
      } else {
        music.pause();
        playPauseButton.classList.add("muted");
      }
    });
  </script>
</div>

<style>
  /* Styling for tekst-knappen */
  #playPauseButton {
    background: none;
    border: none;
    color: #000;
    font-size: 16px;
    cursor: pointer;
    text-decoration: none;
  }

  /* Strek over teksten når musikken er av */
  #playPauseButton.muted {
    text-decoration: line-through;
    color: #888;
  }
</style>
