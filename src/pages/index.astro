  .custom-cursor {
    position: absolute;
    width: 60px;
    height: 60px;
    border: 1px solid black;
    border-radius: 50%;
    pointer-events: none;
    transform: translate(-50%, -50%);
    transition: transform 0.5s ease;
  }
  .animate-scroll {
    display: flex;
    flex-direction: column;
    animation: scroll 1s linear infinite; /* Juster tidsintervallet etter behov */
  }

  @keyframes scroll {
    0% {
      transform: translateY(100%); /* Start under visningen */
    }
    100% {
      transform: translateY(-100%); /* Flytt opp til over visningen */
    }
  }
</style>
