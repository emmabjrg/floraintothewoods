<style>
  body {
    cursor: none;
  }

  .custom-cursor {
    position: absolute;
    width: 60px;
    height: 60px;
    border: 1px solid #517587;
    border-radius: 50%;
    pointer-events: none;
    transform: translate(-50%, -50%);
    transition: transform 0.5s ease;
  }

  .animate-scroll {
    display: flex;
    flex-direction: column;
    animation: scroll 20s infinite linear;
  }

  @keyframes scroll {
    0% {
      transform: translateY(110%); /* Start completely below the container */
    }
    100% {
      transform: translateY(-420%); /* Exit above the container */
    }
  }

  /*----------blur???-----------*/
  #fixed-title {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: filter 1s ease;
  }
</style>
